<Window x:Class="delta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:delta"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        x:Name="AppWindow"
        MinHeight="{Binding WindowMinimumHeight}" MinWidth="{Binding WindowMinimumWidth}"
        Title="Hello,world!" Width="340" Height="370">

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">

                        <!-- Outer border with the dropshadow margin -->
                        <Border Margin="{Binding OuterMarginSizeThickness}">
                            <!-- Main window outline -->
                            <Grid>
                                <!-- Window border and dropshadow -->
                                <Border CornerRadius="{Binding WindowCornerRadius}"
                                        Background="{StaticResource ForegroundLightBrush}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Opacity="0.2"/>
                                    </Border.Effect>
                                </Border>
                                
                                <!-- Main window content -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <!-- Title bar -->
                                        <RowDefinition Height="{Binding TitleHeightGridLength, FallbackValue=43}"/>
                                        <!-- Main content -->
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Title bar -->
                                    <Border BorderBrush="{StaticResource BackgroundLightBrush}"
                                            BorderThickness="0 0 0 1"> 
                                        <Grid Grid.Row="0" Panel.ZIndex="1">

                                        <Grid.ColumnDefinitions>
                                            <!-- Icon -->
                                            <ColumnDefinition Width="Auto" />
                                            <!-- Viewers -->
                                            <ColumnDefinition Width="*" />
                                            <!-- Window action buttons -->
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Chat name :)-->
                                        <Border BorderBrush="{StaticResource ForegroundDarkBrush}"
                                                BorderThickness="0 0 1 0"
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">

                                            <!--<Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" Command="{Binding SystemMenuCommand}"/>
                                            </Border.InputBindings>-->

                                            <TextBlock FontSize="13"  
                                                       Text="LoudChat" 
                                                       Margin="15 0 10 0"/>
                                        </Border>

                                        <!-- Viewers counter -->
                                        <StackPanel Orientation="Horizontal" 
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center">

                                            <TextBlock FontFamily="{StaticResource FontAwesome}"
                                                       Text="{StaticResource FontAwesomeUserIcon}"
                                                       FontSize="13"
                                                       VerticalAlignment="Center"
                                                       Foreground="Red"
                                                       Margin="10 0 5 0"/>

                                            <TextBlock Text="123" 
                                                       FontSize="13"
                                                       FontFamily="{StaticResource LatoRegular}"
                                                       VerticalAlignment="Center"/>

                                        </StackPanel>
                                        
                                        <!-- Window Control Buttons -->
                                        <StackPanel Orientation="Horizontal" 
                                                    Grid.Column="2"
                                                    Margin="0 0 8 0">

                                            <!-- Open setting button -->
                                            <Button Style="{StaticResource WindowControlButton}" >
                                                <TextBlock Text="{StaticResource MaterialDesignCogIcon}"
                                                           FontFamily="{StaticResource MaterialDesign}"/>
                                            </Button>

                                            <!-- Minimize window button -->
                                            <Button Style="{StaticResource WindowControlButton}"
                                                    Command="{Binding MinimizeCommand}">
                                                <TextBlock Text="{StaticResource MaterialDesignMinimizeIcon}"
                                                           FontFamily="{StaticResource MaterialDesign}"/>
                                            </Button>

                                            <!-- Close window button -->
                                            <Button Style="{StaticResource WindowControlCloseButton}"
                                                    Command="{Binding CloseCommand}">
                                                <TextBlock Text="{StaticResource MaterialDesignClose2Icon}"
                                                           FontFamily="{StaticResource MaterialDesign}"/>
                                            </Button>

                                        </StackPanel>
                                        
                                    </Grid>
                                    </Border>
                                    <Border Grid.Row="1" Padding="{Binding InnerContentPadding}">
                                        <ContentPresenter Content="{TemplateBinding Content}"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <WindowChrome.WindowChrome>
        <WindowChrome 
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CornerRadius="{Binding WindowCornerRadius}"
            CaptionHeight="{Binding TitleHeight}"
            GlassFrameThickness="0"
            />
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Frame x:Name="MainFrame" Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}"/>
    </Grid>
    
</Window>

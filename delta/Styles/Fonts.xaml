<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:delta"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Добавление новых шрифтов -->
    <FontFamily x:Key="LatoRegular">pack://application;,,,/Fonts/Lato/#Lato Regular</FontFamily>
    <FontFamily x:Key="LatoThin">pack://application;,,,/Fonts/Lato/#Lato Thin</FontFamily>
    <FontFamily x:Key="LatoBold">pack://application;,,,/Fonts/Lato/#Lato Bold</FontFamily>
    
    <!-- Добавление иконок -->
    <FontFamily x:Key="FontAwesome">pack://application;,,,/Fonts/Icons/fontawesome-webfont.ttf#FontAwesome</FontFamily>
    <FontFamily x:Key="FontAwesome5Brands">pack://application;,,,/Fonts/Icons/fontawesome5brandsregular.otf#FontAwesome5Brands</FontFamily>
    <FontFamily x:Key="FontAwesome5Regular">pack://application;,,,/Fonts/Icons/fontawesome5regular.otf#FontAwesome5Regular</FontFamily>
    <FontFamily x:Key="FontAwesome5Solid">pack://application;,,,/Fonts/Icons/fontawesome5solid.otf#FontAwesome5Solid</FontFamily>
    
    <FontFamily x:Key="MaterialDesign">pack://application;,,,/Fonts/Icons/materialdesignicons-webfont.ttf#Material Design Icons</FontFamily>

    <!-- Set base style -->
    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockStyle">
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}"/>
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseStyle}"/>

    <!-- Material Design Icons -->
    <system:String x:Key="MaterialDesignDeltaIcon">&#xf1c2;</system:String>
    <system:String x:Key="MaterialDesignEyeIcon">&#xf6cf;</system:String>
    <system:String x:Key="MaterialDesignUserIcon">&#xf004;</system:String>
    <system:String x:Key="MaterialDesignMinimizeIcon">&#xf5b0;</system:String>
    <system:String x:Key="MaterialDesignCloseIcon">&#xf156;</system:String>
    <system:String x:Key="MaterialDesignClose2Icon">&#xf5ad;</system:String>
    <system:String x:Key="MaterialDesignCogIcon">&#xf493;</system:String>
    <system:String x:Key="MaterialDesignLoadIcon">&#xf771;</system:String>
    <system:String x:Key="MaterialDesignMaximizeIcon">&#xf5af;</system:String>
    <system:String x:Key="MaterialDesignEmojiIcon">&#xf784;</system:String>
    <system:String x:Key="MaterialDesignAttachIcon">&#xf066;</system:String>
    <system:String x:Key="MaterialDesignSendIcon">&#xf48a;</system:String>
    <system:String x:Key="MaterialDesignFileIcon">&#xf214;</system:String>
    <system:String x:Key="MaterialDesignImageIcon">&#xf21f;</system:String>
    <system:String x:Key="MaterialDesignArrowLeftCircleOutlineIcon">&#xf050;</system:String>
    <system:String x:Key="MaterialDesignArrowLeftDropCircleOutlineIcon">&#xf04b;</system:String>
    <system:String x:Key="MaterialDesignArrowLeftBoldOutlineIcon">&#xf9bf;</system:String>

    <!-- Material design service icons -->
    <system:String x:Key="MaterialDesignTwitchIcon">&#xf543;</system:String>
    <system:String x:Key="MaterialDesignYoutubeIcon">&#xf5c3;</system:String>
    
    <!-- Font Awesome Icons -->
    <system:String x:Key="FontAwesomeUserIcon">&#xf007;</system:String>
    <system:String x:Key="FontAwesomeCogIcon">&#xf013;</system:String>
    <system:String x:Key="FontAwesomeCloseIcon">&#xf00d;</system:String>
    <system:String x:Key="FontAwesomeEmojiIcon">&#xf015;</system:String>
    
    <!-- Font Size -->
    <system:Double x:Key="FontSizeSmaller">10</system:Double>
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeRegular">14</system:Double>
    <system:Double x:Key="FontSizeLarge">20</system:Double>
    <system:Double x:Key="FontSizeXXLarge">25</system:Double>
    
</ResourceDictionary>